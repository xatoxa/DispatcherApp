<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/DriverDialogActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="6dp"
    android:layout_height="match_parent"
    tools:context=".DriverDialogActivity">

    <ListView
        android:id="@+id/listViewDialog"
        android:layout_above="@+id/layoutSendingMessage"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:stackFromBottom="true"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/layoutSendingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_sending"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/eTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/btnSend" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/enter_button"
            android:layout_height="50dp" />
    </RelativeLayout>

</RelativeLayout>